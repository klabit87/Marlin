	sed -i.bak 's/default_envs =.*/default_envs = STM32F103RET6_voxelab_aquila_$(AQUILA_VER)/g' $(PLATFORMIO_CONF)
	sed -i.bak 's/#define GRID_MAX_POINTS_X.*/#define GRID_MAX_POINTS_X $(GRID)/g' $(MARLIN_DIR)/Configuration.h
	sed -i.bak 's/[^ ]*#define BLTOUCH_HS_MODE/$(DISABLE_HS_BLTOUCH)#define BLTOUCH_HS_MODE/g' $(MARLIN_DIR)/Configuration_adv.h
	$(PLATFORMIO) run
.PHONY: UBL-BLTouch

UBL-NoProbe: clean
